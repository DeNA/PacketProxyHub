<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="defaultStatementTimeout" value="10"/>
    </settings>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="com.packetproxyhub.repository.sqlite.SqliteDataSourceFactory">
                <property name="driver" value="org.sqlite.JDBC"/>
                <property name="url" value="jdbc:sqlite:${SQLITE_FILE_PATH}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="com/packetproxyhub/repository/sqlite/AccountMapper.xml"/>
        <mapper resource="com/packetproxyhub/repository/sqlite/OrgMapper.xml"/>
        <mapper resource="com/packetproxyhub/repository/sqlite/ProjectMapper.xml"/>
        <mapper resource="com/packetproxyhub/repository/sqlite/ConfigMapper.xml"/>
        <mapper resource="com/packetproxyhub/repository/sqlite/OrgMemberMapper.xml"/>
    </mappers>
</configuration>